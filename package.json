{
  "private": true,
  "workspaces": [
    "app-client",
    "app-server"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "yarn workspace app-server dev",
    "lint": "eslint --fix ./app-client ./app-server ",
    "prod": "yarn workspace app-server prod",
    "test": "lerna exec -- jest ./src",
    "update-dependencies": "lerna exec -- updtr --use yarn"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@reach/router": "^1.2.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-http": "^1.5.16",
    "classnames": "^2.2.6",
    "graphql": "^14.5.8",
    "node-fetch": "^2.6.0",
    "react": "^16.12.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "babel-plugin-transform-remove-imports": "^1.3.2",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "sass": "^1.23.7",
    "updtr": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "yarn test",
      "git add"
    ]
  }
}
